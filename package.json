{
  "name": "@faablecloud/action-deploy",
  "version": "0.0.0-develop",
  "main": "deploy/index.js",
  "repository": "git@github.com:faablecloud/action-deploy.git",
  "author": "Marc Pomar <marc@corecode.school>",
  "license": "MIT",
  "dependencies": {
    "@actions/cache": "^1.0.7",
    "@actions/core": "^1.2.7",
    "@vercel/ncc": "0.29.1",
    "fs-extra": "^10.0.0",
    "handlebars": "^4.7.7",
    "md5": "^2.3.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.11",
    "@types/md5": "^2.3.0",
    "@types/node": "^15.3.0",
    "ava": "^3.15.0",
    "nodemon": "^2.0.7",
    "semantic-release": "^18.0.0",
    "ts-loader": "^9.2.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.4.4",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.0"
  },
  "scripts": {
    "deploy": "ts-node src/cmd/deploy.ts",
    "build": "ncc build src/index.ts -o deploy",
    "release": "yarn build && semantic-release",
    "test": "ava -v"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "release": {
    "branches": "main",
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}
